{% liquid
  assign section_color = section.settings.color_scheme
  assign show_title = section.settings.show_title
  assign show_rss = section.settings.show_rss
  assign enable_tag_filter = section.settings.enable_tag_filter
  assign show_author = section.settings.show_author
  assign show_date = section.settings.show_date
  assign show_excerpt = section.settings.show_excerpt
  assign show_tags = section.settings.show_tags
  assign show_comments = section.settings.show_comments
  assign show_link = section.settings.show_link
  assign ratio = section.settings.crop | plus: 0
%}

{% paginate blog.articles by section.settings.no_posts %}
<section class="bg-{{ section_color }}-background text-{{ section_color }}-text blog border-t-grid border-grid-color">

  {%- if show_title -%}
  <div class="bg-{{ section_color }}-background text-{{ section_color }}-text section-x-padding pt-theme-double pb-theme  border-b-grid border-grid-color">
    <h1 class="font-heading {{ settings.template_heading_size }} {% if settings.section_title_align == 'center' %}text-center{% endif %}">
      {{ blog.title }}
      {% if show_rss %}
      <a href="{{ shop.url }}{{ blog.url }}.atom">
        <span class="inline-block w-4 h-4">{%- render 'icon-rss' -%}</span>
        <span class="visually-hidden">RSS</span>
      </a>
      {% endif %}
    </h1>
  </div>
  {%- endif -%}

  {% if enable_tag_filter and blog.all_tags.size > 0 %}
    <div class="bg-{{ section_color }}-background text-{{ section_color }}-text border-b-grid border-grid-color relative">
      <div class="bg-gradient-to-r from-{{ section_color }}-background-0 via-{{ section_color }}-background to-{{ section_color }}-background w-8 absolute top-0 right-0 bottom-0 lg:hidden pointer-events-none"></div>
      <nav class="section-x-padding py-theme-half overflow-x-auto " role="navigation">
        <ul class="flex lg:flex-wrap {% if settings.section_title_align == 'center' %}lg:justify-center{% else %}lg:justify-start{% endif %} whitespace-nowrap -mx-2 lg:-mx-4">
          <li class="inline-block px-2 lg:px-4">
            <a {% unless current_tags %}aria-current="page"{% endunless %} class="block py-theme-half" href="{{ blog.url }}"><span class="border-b-text {% unless current_tags %}border-current{% else %}border-transparent{% endunless %}">{{ 'blogs.article.all_topics' | t }}</span></a>
          </li>
          {% for tag in blog.all_tags %}
            {% if current_tags contains tag %}
              <li class="inline-block px-2 lg:px-4">
                <a aria-current="page" class="block py-theme-half" href="{{ blog.url }}/tagged/{{ tag | handle }}"><span class="border-b-text border-current">{{ tag }}</span></a>
              </li>
            {% else %}
              <li class="inline-block px-2 lg:px-4">
                <a class="block py-theme-half" href="{{ blog.url }}/tagged/{{ tag | handle }}"><span class="border-b-text border-transparent">{{ tag }}</span></a>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </nav>
    </div>
  {% endif %}

  {%- case section.settings.layout -%}
    {% when 'feature' %}
      <ol class="">
      {% for article in blog.articles %}
        {% if forloop.index < 5 %}
          {% capture cycle %}{% cycle 'even', 'odd' %}{% endcapture %}

          {%- liquid
            assign alternate = false 
            assign bg_color = 'black'
            assign text_color = 'white'
            if cycle == 'odd' and section.settings.desktop_image_position == 'alternate'
              assign alternate = true 
              assign bg_color = 'white'
              assign text_color = 'black'
            endif

            case section.settings.feature_image_width 
              when 'one-third' 
                assign content_width_desktop = 'lg:col-span-8' 
                if section.settings.desktop_image_position == 'right' or alternate 
                  assign image_width_desktop = 'lg:col-start-9 lg:col-end-13' 
                else 
                  assign image_width_desktop = 'lg:col-span-4' 
                endif 
              when 'one-half' 
                assign content_width_desktop = 'lg:col-span-6' 
                if section.settings.desktop_image_position == 'right' or alternate 
                  assign image_width_desktop = 'lg:col-start-7 lg:col-end-13' 
                else 
                  assign image_width_desktop = 'lg:col-span-6' 
                endif 
              when 'three-fifths' 
                assign content_width_desktop = 'lg:col-span-5' 
                if section.settings.desktop_image_position == 'right' or alternate 
                  assign image_width_desktop = 'lg:col-start-6 lg:col-end-13' 
                else 
                  assign image_width_desktop = 'lg:col-span-7' 
                endif 
              when 'two-thirds' 
                assign content_width_desktop = 'lg:col-span-4' 
                if section.settings.desktop_image_position == 'right' or alternate 
                  assign image_width_desktop = 'lg:col-start-5 lg:col-end-13' 
                else 
                  assign image_width_desktop = 'lg:col-span-8' 
                endif 
            endcase 
          -%}
          

          <li class="relative grid lg:grid-cols-12 grid-flow-row-dense bg-border gap-gutter overflow-hidden {% unless forloop.first %}border-t-grid border-grid-color{% endunless %}">
            {%- if article.image != blank -%}
              <div class="{{ image_width_desktop }} relative full-h bg-{{ section_color }}-background {% unless settings.fill_image_to_border_edge %}p-2 lg:p-4 flex items-center{% endunless %}">
                {% render 'image-crop' with
                  image: article.image,
                  ratio: ratio,
                  crop: section.settings.crop
                %}
              </div>
            {%- endif -%}
            <div class="height-width lg:p-16 pb-16 p-8 {{ content_width_desktop }} bg-{{ bg_color }} text-{{ text_color }}-text lg:flex {{ section.settings.feature_content_position }}  {% if article.image == blank %}col-span-2{% endif %}  overflow-hidden">
              <a class="increase-target" href="{{ article.url }}" aria-label="{{ 'blogs.article.read_more_title' | t: title: article.title }}"></a>
              <div class="lg:w-2/3 lg:px-8 lg:py-4 h-full flex-col justify-between flex lg:pb-32">
                {%- if show_date -%}
                  <p class="mt-2">
                    {{ article.published_at | time_tag: format: 'month_day_year' }}
                  </p>
                {%- endif -%}

                <div>
                  <h2 class="font-heading {{ settings.base_heading_size }}  break-words">{{ article.title }}</h2>

                  {%- if show_author -%}
                    <p class="mt-2">{{ 'blogs.article.by_author' | t: author: article.author }}</p>
                  {%- endif -%}

                  {%- if show_excerpt -%}
                    <div class="rte mt-8">
                      {%- if article.excerpt.size > 0 %}
                        {{ article.excerpt }}
                      {%- else -%}
                        {{ article.content | strip_html | truncate: 150 }}
                      {%- endif -%}
                    </div>
                  {%- endif -%}
                </div>

                {% if article.tags.size > 0 and show_tags %}
                  <div class="mt-4">
                    <ul class="m-0 p-0 -mx-1" aria-label="{{ 'blogs.article.tags' | t }}">
                      {% for tag in article.tags %}
                        <li class="inline-block px-1">
                          <a href="{{ blog.url }}/tagged/{{ tag | handle }}" class="article__grid-tag">#{{ tag }}</a>
                        </li>
                      {% endfor %}
                    </ul>
                  </div>
                {% endif %}

                {% if show_comments %}
                  <ul class="mt-4">
                  {% if blog.comments_enabled? and article.comments_count > 0 %}
                    <li>
                      <a href="{{ article.url }}#comments">
                        {{ 'blogs.comments.comments_with_count' | t: count: article.comments_count }}
                      </a>
                    </li>
                  {% endif %}
                  </ul>
                {% endif %}

                {% if show_link %}
                <div class="mt-4">
                  <span class="hover:text-{{ section_color }}-accent text-base align-top inline-flex items-center justify-center {% if settings.links_show_underline %}border-b-text border-{{ section_color }}-text hover:border-{{ section_color }}-accent pb-1{% endif %}" href="{{ article.url }}" aria-label="{{ 'blogs.article.read_more_title' | t: title: article.title }}">
                    <span class="{% if settings.links_uppercase %}uppercase{% endif %} flex">{{ 'blogs.article.read_more' | t }} {% if settings.links_show_arrow %}<span class="arrow-right-long w-20px inline-flex color-{{ text_color }}">{% render 'icon-arrow-right-long' %}</span>{% endif %}</span>
                  </span>
                </div>
                {%- endif -%}
              </div>
            </div>
          </li>
        {% else %}
          {% if forloop.index == 5 %}
            <h2 class="{% if settings.section_title_font == 'heading' %}font-heading{% else %}font-body{% endif %} text-2xl {{ heading_width_class }} uppercase break-words border-top border-bottom p-8">More news</h2>
          {% endif %}
          <div class="border-bottom flex relative">
            <a class="increase-target" href="{{ article.url }}" aria-label="{{ 'blogs.article.read_more_title' | t: title: article.title }}"></a>
            <div class="w-30 relative full-h bg-{{ section_color }}-background {% unless settings.fill_image_to_border_edge %}p-2 lg:p-4 flex items-center{% endunless %}">
              {% render 'image-crop' with
                image: article.image,
                ratio: ratio,
                crop: section.settings.crop
              %}
            </div>
            <div class="flex lg:px-8 p-4 items-center justify-between w-full flex-wrap">
              <div class="flex items-center w-full lg:w-2/3 justify-between">
                <h2 class="font-heading text-xl break-words mr-8">{{ article.title }}</h2>

                {%- if show_excerpt -%}
                  <div class="rte text-base hidden lg:block">
                    {%- if article.excerpt.size > 0 %}
                      {{ article.excerpt }}
                    {%- else -%}
                      {{ article.content | strip_html | truncate: 150 }}...
                    {%- endif -%}
                  </div>
                {%- endif -%}
              </div>

              {% if show_link %}
                <div class="">
                  <span class="hover:text-{{ section_color }}-accent text-base align-top inline-flex items-center justify-center {% if settings.links_show_underline %}border-b-text border-{{ section_color }}-text hover:border-{{ section_color }}-accent pb-1{% endif %}" href="{{ article.url }}" aria-label="{{ 'blogs.article.read_more_title' | t: title: article.title }}">
                    <span class="{% if settings.links_uppercase %}uppercase{% endif %} flex">{{ 'blogs.article.read_more' | t }} {% if settings.links_show_arrow %}<span class="arrow-right-long w-20px inline-flex color-{{ text_color }}">{% render 'icon-arrow-right-long' %}</span>{% endif %}</span>
                  </span>
                </div>
              {%- endif -%}
            </div>
          </div>
        {% endif %}
      {% endfor %}
      </ol>
    {% when 'grid' %}
      <ol class="grid grid-cols-1 lg:grid-cols-3 gap-gutter bg-border">
        {%- assign counter = 0 -%}
        {% for article in blog.articles %}
          {%- assign counter = counter | plus: 1 -%}
          <li class="relative bg-{{ section_color }}-background text-{{ section_color }}-text">
            <a class="increase-target" href="{{ article.url }}" aria-label="{{ 'blogs.article.read_more_title' | t: title: article.title }}"></a>
            <div class="group block h-full">

              {%- if article.image != blank -%}
                <div class="full-h bg-{{ section_color }}-background {% if settings.fill_image_to_border_edge %}border-b-grid border-grid-color{% else %}pt-2 px-2 lg:pt-4 lg:px-4{% endif %}">
                  <div class="relative">
                    {% render 'image-crop' with
                      image: article.image,
                      ratio: ratio,
                      crop: section.settings.crop
                    %}
                  </div>
                </div>
              {%- endif -%}

              <div class="py-theme section-x-padding">
                <h2 class="font-heading {{ settings.secondary_heading_size }} break-words">{{ article.title }}</h2>

                {%- if show_author -%}
                  <p class="mt-2">{{ 'blogs.article.by_author' | t: author: article.author }}</p>
                {%- endif -%}

                {%- if show_date -%}
                  <p class="mt-2">
                    {{ article.published_at | time_tag: format: 'month_day_year' }}
                  </p>
                {%- endif -%}

                {%- if show_excerpt -%}
                  <div class="rte mt-4">
                    {%- if article.excerpt.size > 0 %}
                      {{ article.excerpt }}
                    {%- else -%}
                      {{ article.content | strip_html | truncate: 150 }}
                    {%- endif -%}
                  </div>
                {%- endif -%}

                {% if article.tags.size > 0 and show_tags %}
                  <div class="mt-4">
                    <ul class="m-0 p-0 -mx-1" aria-label="{{ 'blogs.article.tags' | t }}">
                      {% for tag in article.tags %}
                        <li class="inline-block px-1">
                          <a href="{{ blog.url }}/tagged/{{ tag | handle }}" class="article__grid-tag">#{{ tag }}</a>
                        </li>
                      {% endfor %}
                    </ul>
                  </div>
                {% endif %}

                {% if show_comments %}
                  <ul class="mt-4">
                  {% if blog.comments_enabled? and article.comments_count > 0 %}
                    <li>
                      <a href="{{ article.url }}#comments">
                        {{ 'blogs.comments.comments_with_count' | t: count: article.comments_count }}
                      </a>
                    </li>
                  {% endif %}
                  </ul>
                {% endif %}

                {% if show_link %}
                <div class="mt-4">
                  <span class="hover:text-{{ section_color }}-accent text-base align-top inline-flex items-center justify-center {% if settings.links_show_underline %}border-b-text border-{{ section_color }}-text hover:border-{{ section_color }}-accent pb-1{% endif %}" href="{{ article.url }}" aria-label="{{ 'blogs.article.read_more_title' | t: title: article.title }}">
                    <span class="{% if settings.links_uppercase %}uppercase{% endif %}">{{ 'blogs.article.read_more' | t }} {% if settings.links_show_arrow %}&rarr;{% endif %}</span>
                  </span>
                </div>
                {%- endif -%}
              </div>
          </li>
        {% endfor %}
        {%- assign items_on_last_row = counter | modulo: 3 -%}
        {%- assign placeholder_width = 3 | minus: items_on_last_row -%}
        {%- if items_on_last_row != 0 -%}
          <li class="none absolute lg:static lg:block lg:col-span-{{ placeholder_width }} bg-{{ section_color }}-background" aria-hidden="true" role="presentation"></li>
        {%- endif -%}
      </ol>
  {% endcase %}

  {% if paginate.pages > 1 %}
    {% render 'pagination' with paginate: paginate, section_color: section_color %}
  {% endif %}
</section>
{% endpaginate %}

{%- if section.settings.override_header_footer_color_scheme -%}
  {%- render 'header-footer-color-scheme-override', section_color: section_color -%}
{%- endif -%}

{% schema %}
  {
    "name": "Blog pages",
    "class": "blog-template",
    "settings": [
      {
        "type": "select",
        "id": "layout",
        "label": "Layout",
        "options": [
            { "value": "feature", "label": "Feature"},
            { "value": "grid", "label": "Grid"}
        ],
        "default":   "feature"
      },
      {
        "type": "checkbox",
        "id": "show_title",
        "label": "Show title",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_rss",
        "label": "Show rss",
        "default": false,
        "info": "If title is hidden RSS link will also be hidden"
      },
      {
        "type": "checkbox",
        "id": "enable_tag_filter",
        "label": "Enable filtering by tag",
        "default": true
      },
      {
        "type":      "header",
        "content":   "Feature layout"
      },
      {
        "type": "select",
        "id": "feature_content_position",
        "label": "Content position",
        "options": [
            { "value": "lg:items-top", "label": "Top"},
            { "value": "lg:items-center", "label": "Middle"},
            { "value": "lg:items-end", "label": "Bottom"}
        ],
        "default":   "lg:items-center"
      },
      {
        "type": "select",
        "id": "feature_image_width",
        "label": "Desktop image width",
        "options": [
          { "value": "one-third", "label": "One third"},
          { "value": "one-half", "label": "One half"},
          { "value": "three-fifths", "label": "Three fifths"},
          { "value": "two-thirds", "label": "Two thirds"}
        ],
        "default":   "one-half"
      },
      {
        "type": "select",
        "id": "desktop_image_position",
        "label": "Desktop image position",
        "options": [
            { "value": "left", "label": "Left"},
            { "value": "right", "label": "Right"},
            { "value": "alternate", "label": "Alternate"}
        ],
        "default":   "right"
      },
      {
        "type": "header",
        "content": "Articles"
      },
      {
        "type": "checkbox",
        "id": "show_author",
        "label": "Show author",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_date",
        "label": "Show date",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_excerpt",
        "label": "Show excerpt",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_tags",
        "label": "Show tags",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_comments",
        "label": "Show comments",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_link",
        "label": "Show read more link",
        "default": true
      },
      {
        "type": "select",
        "id": "crop",
        "label": "Crop images",
        "options": [
          {
            "value": "0",
            "label": "No crop"
          },
          {
            "value": "1.3",
            "label": "Landscape"
          },
          {
            "value": "1",
            "label": "Square"
          },
          {
            "value": "0.8",
            "label": "Portrait"
          }
        ],
        "default": "1"
      },
      {
        "type":      "range",
        "id":        "no_posts",
        "min":       3,
        "max":        12,
        "step":       3,
        "label":     "No of posts per page",
        "default":   6
      },
      {
        "type":      "header",
        "content":   "Color"
      },
      {
        "type": "select",
        "id": "color_scheme",
        "label": "Color scheme",
        "options": [
            { "value": "primary", "label": "Primary"},
            { "value": "secondary", "label": "Secondary"},
            { "value": "tertiary", "label": "Tertiary"}
        ],
        "default":   "primary"
      },
      {
        "type": "checkbox",
        "id": "override_header_footer_color_scheme",
        "label": "Use this color scheme for header and footer",
        "info": "This will only apply to the blog template",
        "default": false
      }
    ]
  }
{% endschema %}
