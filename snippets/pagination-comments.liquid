<div class="bg-{{ section_color }}-background text-{{ section_color }}-text  pb-theme-double pt-theme text-sm md:text-base">
  <ul class="pagination flex items-center">
    <li class="w-28 md:w-1/3 text-left mr-auto" {% unless paginate.previous.is_link %}aria-hidden="true"{% endunless %}>
      {% if paginate.previous.is_link %}
        <a class="hover:text-{{ section_color }}-accent inline-flex items-center justify-center {% if settings.links_show_underline %}border-b-text border-{{ section_color }}-text hover:border-{{ section_color }}-accent pb-1{% endif %}" href="{{ paginate.previous.url }}">
          {% if settings.links_show_arrow %}&larr;&nbsp;{% endif %}
          <span class="{% if settings.links_uppercase %}uppercase{% endif %}">{{ 'general.pagination.previous' | t }}</span>
        </a>
      {% endif %}
    </li>
    {%- for part in paginate.parts -%}
      {%- if part.is_link -%}
        <li>
          <a class="inline-block p-2 border-b-text border-transparent" href="{{ part.url }}">
            <span class="visually-hidden">page</span> {{ part.title }}
          </a>
        </li>
      {%- else -%}
        {%- if part.title == paginate.current_page -%}
          <li class="inline-block p-2 active border-b-text border-{{ section_color }}-text" aria-current="page">
            <span class="visually-hidden">page</span> {{ part.title }}
          </li>
        {%- else -%}
          <li class="inline-block p-2 border-b-text border-transparent">
            <span class="visually-hidden">page</span> {{ part.title }}
          </li>
        {%- endif -%}
      {%- endif -%}
    {%- endfor -%}
    <li class="w-28 md:w-1/3 ml-auto text-right" aria-hidden="true">
      {% if paginate.next.is_link %}
        <a class="hover:text-{{ section_color }}-accent inline-flex items-center justify-center {% if settings.links_show_underline %}border-b-text border-{{ section_color }}-text hover:border-{{ section_color }}-accent pb-1{% endif %}" href="{{ paginate.next.url }}">
          <span class="{% if settings.links_uppercase %}uppercase{% endif %}">{{ 'general.pagination.next' | t }}</span>
          {% if settings.links_show_arrow %}&nbsp;&rarr;{% endif %}
        </a>
      {% endif %}
    </li>
  </ul>
</div>
